# HTML and XML
language "Xml/Html"
  filesmatch "*.xml,*.htm,*.html,*.ui"
  contextlines 1
  rule "Comment"
    openpattern   "<!--"
    closepattern  "-->"
  end

  rule "Entity"
    openpattern   "\&"
    closepattern  ";"
  end

  rule "Instruction"
    openpattern   "<\?"
    closepattern  "\?>"
    rule "String"
      openpattern   "\""
      closepattern  "\""
      rule "Entity"
        openpattern   "\&"
        closepattern  ";"
        stoppattern   "(?=\")"
      end
    end
    rule "String"
      openpattern   "\'"
