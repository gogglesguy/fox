# Contributed by: Andy Preston <mail@andy-preston.co.uk>
language "Markup"
  filesmatch "*.html,*.xhtml,*.xml,*.sgml,*.php"
  contextlines 1
  rule "PHP"
     openpattern "<\?php"
     closepattern "\?>"
     rule "String"
         openpattern   "\""
         closepattern  "\""
